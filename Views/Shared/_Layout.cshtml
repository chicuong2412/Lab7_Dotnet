<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Lab3_LeChiCuong_2131200001</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Lab3_LeChiCuong_2131200001.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav>
			@* <div class="container-fluid"> *@
			<div class="container">
				<div class="row">
					<div class="col-12 d-flex justify-content-end">
						<p class="text-dark" style="width: fit-content">

							@if (User.Identity.IsAuthenticated == false)
							{
								<div style="display: flex; gap: 10px">
									<a class="text-decoration-none text-black" asp-controller="Account" asp-action="Login" style="cursor: pointer">Sign in</a>
									<a class="text-decoration-none text-black" asp-controller="Account" asp-action="Register" style="cursor: pointer">Sign out</a>
								</div>
							}
							else
							{
								<a class="text-decoration-none text-black" asp-controller="Account" asp-action="Logout" style="cursor: pointer">Logout</a>
							}

						</p>
					</div>
				</div>
				<div class="row">
					<div class="col-3">
						<a asp-controller="Home" asp-action="Index">
							<img class="mb-1" style="cursor: pointer" src="/assets/image/logo.6362708d.svg" loading="lazy" />
						</a>
					</div>
					<div class="col-9">
						<div class="d-flex justify-content-end align-items-center" style="height: 100%">
							<form class="d-flex h-75">
								<input class="form-control me-2" type="search" placeholder="Tìm kiếm...">
								<button class="btn btn-outline-light text-dark" type="submit">Tìm</button>
							</form>
						</div>
					</div>
				</div>

			</div>
			<div style="background-color: #078E15">
				<div class="container">
					<div class="row">
						<div class="col-4">
						</div>
						<div class="col-8">
							<ul class="navbar-nav flex-grow-1 flex-row gap-1 justify-content-end">
								<li class="nav-item px-3 py-1 menuItem">
									<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
								</li>
								<li class="nav-item px-3 py-1 menuItem">
									<a class="nav-link text-white" asp-area="" asp-controller="Book" asp-action="PageProgrammingBook">Programming</a>
								</li>
								<li class="nav-item px-3 py-1 menuItem">
									<a class="nav-link text-white" asp-area="" asp-controller="Book" asp-action="PageFictionBook">Fiction</a>
								</li>
								@if (User.IsInRole("Admin"))
								{
									<li class="nav-item px-3 py-1 menuItem">
										<a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="UserTable">Dashboard</a>
									</li>
								}

							</ul>
						</div>
					</div>
				</div>
			</div>
			@* </div> *@
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top">
		<div class="container mt-2">
			<div class="row">
				<div class="col-3">
					<img src="/assets/image/logo.6362708d.svg" loading="lazy" />
				</div>
				<div class="col-9">
					<ul>
						<li>Full name: Lê Chí Cường</li>
						<li>Class: Practice group 2</li>
					</ul>
				</div>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
