@model Book
@{

}



@{
    if (!ViewBag.Error)
    {
        <iframe src="@Url.Action("GetPdf", "Book", new { fileName = Model.Pdf })" width="100%" style="min-height: 80vh">
        </iframe>
    } else
    {
        <p>@ViewBag.ErrorMessage</p>
    }
}
